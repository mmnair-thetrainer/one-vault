<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/firstNamelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="126dp"
        android:text="First Name"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="407dp"
        android:layout_marginEnd="178dp"
        android:text="Register" />

    <TextView
        android:id="@+id/lastNamelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:text="Last Name"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_below="@id/firstNamelbl"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/firstNamelbl"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="-27dp"
        android:layout_toEndOf="@id/firstNamelbl"
        android:ems="10"
        android:hint="firstName"
        android:inputType="text"
        android:labelFor="@+id/firstNamelbl"
        android:padding="8dp" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/lastNamelbl"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="-21dp"
        android:layout_toEndOf="@id/lastNamelbl"
        android:ems="10"
        android:hint="lastName"
        android:inputType="text"
        android:labelFor="@+id/lastNamelbl"
        android:padding="8dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/lastName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="211dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="-10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:labelFor="@+id/address"
        android:padding="8dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/address"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="-1dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:padding="8dp" />

</RelativeLayout>