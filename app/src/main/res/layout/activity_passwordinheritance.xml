<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".LoginPage">

    <!-- Set Password Inheritance Header -->
    <TextView
        android:id="@+id/setPasswordInheritanceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password Inheritance"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Entries -->
    <EditText
        android:id="@+id/entriesEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/setPasswordInheritanceHeader"
        android:hint="Entries"
        android:inputType="text"
        android:padding="8dp"/>

    <!-- Inherit From -->
    <EditText
        android:id="@+id/inheritFromEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/entriesEditText"
        android:hint="Inherit From"
        android:inputType="text"
        android:padding="8dp"/>

    <!-- Inherit To -->
    <EditText
        android:id="@+id/inheritToEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/inheritFromEditText"
        android:hint="Inherit To"
        android:inputType="text"
        android:padding="8dp"/>

    <!-- Inherit Button -->
    <Button
        android:id="@+id/inheritButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inheritToEditText"
        android:text="Inherit" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />


</RelativeLayout>
